<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="190dp"
        android:src="@drawable/fotooo"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#406DE1"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:layout_marginTop="05dp"
        android:shadowColor="@color/black"
        android:letterSpacing="0.05"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#406DE1"
        android:fontFamily="sans-serif"
        />
    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@gmail.com"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#406DE1"
        android:fontFamily="sans-serif"
        />
    <EditText
        android:id="@+id/txtPassLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su contraseÃ±a"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:inputType="numberPassword"
        />
    <TextView
        android:id="@+id/lblResetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foget your password"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:textColor="#406DE1"
        android:fontFamily="sans-serif-black"
        />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:backgroundTint="#F1C40F"
        android:layout_gravity="end"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/lblRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have acount... create"
        android:layout_gravity="end"
        android:layout_marginEnd="55dp"
        android:textColor="#406DE1"
        android:textSize="12sp"
        android:clickable="true"
        />

</LinearLayout>